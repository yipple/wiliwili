<brls:Box
        width="auto"
        height="auto"
        justifyContent="flexEnd"
        alignItems="center">

    <brls:Box
            id="player/cancel"
            height="100%"
            hideClickAnimation="true"
            grow="1"/>

    <brls:Box
            id="comment/action/box"
            positionType="absolute"
            positionTop="60"
            positionRight="470"
            cornerRadius="40"
            height="80"
            axis="column"
            justifyContent="center"
            alignItems="center"
            backgroundColor="@theme/brls/background">

        <brls:Box>

            <SVGImage
                    focusable="true"
                    id="comment/action/svg/delete"
                    margin="14"
                    width="48"
                    height="48"
                    cornerRadius="48"
                    highlightCornerRadius="48"
                    visibility="gone"
                    SVG="@res/svg/bpx-svg-sprite-delete.svg"/>

            <SVGImage
                    focusable="true"
                    id="comment/action/svg/reply"
                    margin="14"
                    width="48"
                    height="48"
                    cornerRadius="48"
                    highlightCornerRadius="48"
                    SVG="@res/svg/bpx-svg-sprite-reply.svg"/>

            <SVGImage
                    focusable="true"
                    id="comment/action/svg/dislike"
                    margin="14"
                    width="48"
                    height="48"
                    cornerRadius="48"
                    highlightCornerRadius="48"
                    SVG="@res/svg/bpx-svg-sprite-disliked.svg"/>

            <SVGImage
                    focusable="true"
                    id="comment/action/svg/like"
                    margin="14"
                    width="48"
                    height="48"
                    cornerRadius="48"
                    highlightCornerRadius="48"
                    SVG="@res/svg/bpx-svg-sprite-liked.svg"/>

            <SVGImage
                    focusable="true"
                    id="comment/action/svg/gallery"
                    margin="14"
                    width="48"
                    height="48"
                    cornerRadius="48"
                    highlightCornerRadius="48"
                    visibility="gone"
                    SVG="@res/svg/bpx-svg-sprite-fullpage.svg"/>

        </brls:Box>

    </brls:Box>

    <brls:Box
            width="460"
            height="100%"
            id="box/background"
            backgroundColor="@theme/brls/background">
        <brls:Label
                fontSize="24"
                text="@i18n/wiliwili/player/single_comment/detail"
                positionType="absolute"
                positionTop="20"
                positionLeft="20"/>

        <brls:ScrollingFrame
                width="440"
                height="auto"
                focusable="true"
                marginTop="60"
                marginLeft="20"
                grow="1.0">

            <brls:Box
                    axis="column"
                    grow="1.0"
                    width="410">
                <VideoComment
                        id="comment/action/comment"
                        focusable="false"
                        hideClickAnimation="true"
                        width="410"/>
            </brls:Box>

        </brls:ScrollingFrame>
    </brls:Box>

    <ButtonClose
            id="button/close"
            positionType="absolute"
            positionTop="10"
            positionRight="10"/>

</brls:Box>