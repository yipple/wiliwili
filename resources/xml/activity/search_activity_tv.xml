<brls:AppletFrame
        iconInterpolation="linear"
        headerHidden="true"
        footerHidden="false">
    <brls:Box>
        <brls:Box
                axis="column"
                marginTop="50"
                alignItems="center"
                justifyContent="center"
                width="400">
            <brls:Box
                    focusable="true"
                    focusDown="tv/search/search"
                    alignItems="center"
                    marginLeft="10"
                    width="310">
                <SVGImage
                        id="tv/search/svg"
                        width="19"
                        height="18"
                        marginLeft="10"
                        marginRight="10"/>
                <brls:Label
                        id="tv/search/input"
                        marginTop="8"
                        marginBottom="10"/>
            </brls:Box>
            <brls:Box
                    marginTop="10"
                    width="320">
                <brls:Label
                        id="tv/search/clear"
                        grow="1"
                        backgroundColor="@theme/color/grey_2"
                        horizontalAlign="center"
                        focusable="true"
                        margin="10"
                        height="30"
                        cornerRadius="4"
                        text="@i18n/wiliwili/search/tv/clear"/>
                <brls:Label
                        id="tv/search/delete"
                        grow="1"
                        backgroundColor="@theme/color/grey_2"
                        horizontalAlign="center"
                        focusable="true"
                        marginTop="10"
                        height="30"
                        cornerRadius="4"
                        text="@i18n/wiliwili/search/tv/delete"/>
                <brls:Label
                        id="tv/search/search"
                        grow="1"
                        backgroundColor="@theme/color/grey_2"
                        horizontalAlign="center"
                        focusable="true"
                        marginTop="10"
                        marginLeft="10"
                        height="30"
                        cornerRadius="4"
                        text="@i18n/wiliwili/search/tv/search"/>
            </brls:Box>
            <brls:Box
                    width="320"
                    axis="column"
                    height="60%">
                <RecyclingGrid
                        width="320"
                        grow="1"
                        marginLeft="10"
                        itemHeight="40"
                        spanCount="6"
                        itemSpace="10"
                        id="tv/search/keyboard"/>
            </brls:Box>
        </brls:Box>
        <brls:Box
                marginTop="20"
                axis="column"
                grow="1">
            <brls:Label
                    id="tv/search/label/hots"
                    horizontalAlign="center"
                    fontSize="24"
                    text="@i18n/wiliwili/search/tv/hots"/>
            <SearchHots
                    id="tv/search/hots"
                    marginTop="16"
                    spanCount="1"/>
        </brls:Box>
        <brls:Box
                marginTop="20"
                axis="column"
                grow="1">
            <brls:Label
                    horizontalAlign="center"
                    fontSize="24"
                    text="@i18n/wiliwili/search/tv/history"/>
            <SearchHistory
                    id="tv/search/history"
                    marginTop="16"
                    spanCount="1"/>
        </brls:Box>
        <ButtonClose
                positionType="absolute"
                positionTop="6"
                positionRight="30"/>
    </brls:Box>
</brls:AppletFrame>
