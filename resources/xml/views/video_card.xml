<brls:Box
        wireframe="false"
        highlightCornerRadius="8"
        axis="column"
        width="auto"
        height="auto">
    <brls:Box
            id="video/card/pic_box"
            width="100%"
            height="60%">
        <brls:Image
                id="video/card/picture"
                scalingType="fill"
                height="100%"
                width="100%"
                image="@res/pictures/video-card-bg.png"
                cornerRadius="4"/>

        <brls:Box
                positionBottom="0"
                positionType="absolute"
                background="vertical_linear"
                paddingLeft="10"
                paddingRight="10"
                width="100%"
                height="20%"
                alignItems="center">
            <SVGImage
                    id="video/svg/view"
                    width="18"
                    height="18"
                    marginTop="2"
                    SVG="@res/svg/widget-video-play-count.svg"/>
            <brls:Label
                    marginLeft="4"
                    marginRight="4"
                    textColor="#FFFFFF"
                    id="video/card/label/count"
                    fontSize="16"
                    text=""/>
            <SVGImage
                    id="video/svg/danmaku"
                    width="18"
                    height="18"
                    marginTop="2"
                    SVG="@res/svg/widget-video-danmaku.svg"/>
            <brls:Label
                    marginLeft="4"
                    id="video/card/label/danmaku"
                    textColor="#FFFFFF"
                    fontSize="16"
                    text=""/>
            <brls:Label
                    id="video/card/label/duration"
                    positionType="absolute"
                    positionRight="10"
                    textColor="#FFFFFF"
                    fontSize="16"/>
        </brls:Box>

    </brls:Box>
    <brls:Box
            margin="10"
            axis="column">
        <TextBox
                id="video/card/label/title"
                fontSize="20"
                lineHeight="1.5"
                maxRows="2"
                width="100%"
                height="60"/>
        <brls:Box
                width="100%"
                height="20"
                alignItems="center">
            <brls:Box
                    id="video/card/hint"
                    backgroundColor="@theme/color/yellow_1"
                    cornerRadius="4"
                    marginTop="2"
                    shrink="0"
                    justifyContent="center"
                    alignItems="center">
                <brls:Label
                        id="video/card/label/hint"
                        fontSize="12"
                        marginLeft="4"
                        marginRight="4"
                        marginTop="2"
                        marginBottom="2"
                        horizontalAlign="center"
                        textColor="@theme/font/yellow_1"/>
            </brls:Box>
            <brls:Image
                    id="video/card/picture/hint"
                    height="18"
                    width="18"/>
            <SVGImage
                    id="video/svg/up"
                    height="14"
                    width="18"
                    SVG="@res/svg/widget-up.svg"/>
            <brls:Label
                    id="video/card/label/username"
                    marginLeft="4"
                    fontSize="16"
                    singleLine="true"
                    textColor="@theme/font/grey"
                    height="100%"/>
        </brls:Box>
        <brls:Box
                id="video/card/rcmd_box"
                visibility="gone"
                marginTop="4"
                height="20"
                backgroundColor="@theme/color/grey_1"
                cornerRadius="4"
                alignItems="center">
            <brls:Image
                    marginLeft="8"
                    marginRight="4"
                    width="12"
                    height="12"
                    image="@res/pictures/icon-quotation.png"/>

            <brls:Label
                    wireframe="false"
                    id="video/card/label/rcmd"
                    fontSize="13"
                    singleLine="true"
                    text="RCMD reason"
                    textColor="@theme/font/grey"/>
        </brls:Box>
        <brls:Box
                id="video/card/achievement_box"
                visibility="gone"
                marginTop="4"
                height="20"
                backgroundColor="@theme/color/yellow_1"
                cornerRadius="4"
                alignItems="center">
            <brls:Image
                    marginLeft="8"
                    marginRight="4"
                    width="12"
                    height="12"
                    image="@res/pictures/icon-history.png"/>

            <brls:Label
                    wireframe="false"
                    id="video/card/label/achievement"
                    fontSize="13"
                    singleLine="true"
                    text="explain"
                    textColor="@theme/font/yellow_1"/>
        </brls:Box>
    </brls:Box>
</brls:Box>