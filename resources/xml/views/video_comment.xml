<brls:Box
        focusable="true"
        wireframe="false"
        axis="column"
        width="auto"
        height="auto">
    <UserInfoView
            id="comment/userinfo"
            wireframe="false"
            width="auto"
            marginTop="10"
            marginBottom="10"
            height="60"/>
    <SVGImage
            id="comment/user/level"
            detachedX="@style/wiliwili/comment/level/x"
            detachedY="45"
            width="30"
            height="30"/>
    <brls:Box
            wireframe="false"
            axis="column"
            grow="1"
            marginLeft="40"
            marginRight="4"
            marginBottom="8"
            width="auto"
            height="auto">
        <TextBox
                width="auto"
                height="auto"
                grow="1"
                wireframe="false"
                maxRows="6"
                showMore="true"
                id="comment/label/content"/>
    </brls:Box>

    <brls:Box
            marginLeft="40"
            marginRight="8"
            marginBottom="8"
            shrink="0"
            width="auto"
            alignItems="center"
            height="32">
        <SVGImage
                id="comment/svg/like"
                width="24"
                height="24"
                SVG="@res/svg/comment-agree-grey.svg"/>
        <brls:Label
                id="comment/label/like"
                marginLeft="4"
                marginRight="30"
                textColor="@theme/font/grey"
                fontSize="16"
                text="29"/>
        <SVGImage
                id="comment/svg/dislike"
                width="24"
                height="24"
                marginRight="30"
                SVG="@res/svg/comment-disagree-grey.svg"/>
        <SVGImage
                id="comment/svg/reply"
                width="24"
                height="24"
                SVG="@res/svg/comment-replay-grey.svg"/>
        <brls:Label
                id="comment/label/reply"
                marginLeft="4"
                marginRight="10"
                textColor="@theme/font/grey"
                fontSize="16"
                text="29"/>
    </brls:Box>

</brls:Box>